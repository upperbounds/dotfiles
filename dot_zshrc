# zmodload zsh/zprof

ZSH=$HOME/.oh-my-zsh
plugins=(git ssh-agent brew aws terraform emacs docker docker-compose podman zsh-autosuggestions zsh-syntax-highlighting you-should-use)
source $ZSH/oh-my-zsh.sh

eval "$(mise activate zsh)"
eval "$(atuin init --disable-up-arrow zsh)"
eval "$(direnv hook zsh)"
eval "$(starship init zsh)"
eval "$(circleci completion zsh)"

eval "$(chezmoi completion zsh)"

if [[ -n ${INSIDE_EMACS} ]]; then
    export TERM=xterm-256color
else
    export SOLARIZED_THEME=light
fi

# for config_file (~/.zsh/*.zsh) source $config_file

if [ -e $HOME/.zshrc-local ]; then
    source $HOME/.zshrc-local
fi

# source ~/.zsh/functions.zsh-overrides

fpath=(~/.zsh/completion $fpath)

alias ffp="ffplay -autoexit"
alias ls='lsd'
alias cat="bat"
alias ec="emacsclient -n"

bindkey '^ ' autosuggest-accept

